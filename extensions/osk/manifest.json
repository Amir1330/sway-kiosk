{ 
 "manifest_version": 3,
  "name": "On-Screen Keyboard RU/EN",
  "version": "1.0",
  "description": "A modern on-screen keyboard with Russian and English layouts",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["styles/keyboard.css"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
